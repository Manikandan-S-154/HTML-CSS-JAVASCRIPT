<h1>Guess the Number </h1>

<input id="guess">
<button onclick="f()">Check</button>
<p id="s">Score : 10</p>
<p id="result">You are Wrong/Right</p>

<script>
    var a=document.getElementById("guess")
    var b=document.getElementById("result")
    var r=document.getElementById("s")
    var r1=10
    var rand=Math.floor((Math.random()*10)+1)
    function f(){

        var c=a.value
            console.log(rand)

        if(c==rand){
            console.log("Right")
            result.textContent ="Right"
            alert("You Won")
        }
        else{
            r1--
            s.textContent="Score : "+r1
            console.log("Wrong")
            result.textContent ="Wrong"
        }
    }
</script>
